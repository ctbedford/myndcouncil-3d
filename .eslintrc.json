{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "THREE": "readonly",
    "COUNCIL_DATA": "readonly",
    "CONNECTIONS": "readonly",
    "LAYERS": "readonly",
    "ANIMATION_PRESETS": "readonly",
    "INVOCATION_SEQUENCE": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    "semi": ["error", "always"]
  }
}

